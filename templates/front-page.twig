                                    <span class="caption-sub portfolio-category">{{ post.get_field('home_portfolio_4_category')}}</span>
                                    <h2 class="caption-name portfolio-name">{{ post.get_field('home_portfolio_4_name')}}</h2>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="spacer-big"></div>
                <div class="spacer-big hidden-768"></div>
                <div class="wrapper-small">
                    <h3 class="align-center">{{post.get_field('homepage_title_two')}}</h3>
                    <div class="spacer-medium"></div>
                    <h4 class="align-center title-alt">{{post.get_field('homepage_brands_subtitle')}}</h4>
                    <div class="spacer-medium"></div>
                </div>
                <p class="align-center do-anim"><img alt="Scope Web logo dark" src="{{TimberImage(post.get_field('brand_images_1')).src}}"></p>
                <div class="spacer-medium"></div>
                <p class="align-center do-anim"><img alt="Scope Web logo light" src="{{TimberImage(post.get_field('brand_images_2')).src}}"></p>
                <div class="spacer-big"></div>
                <div class="spacer-big hidden-768"></div>
                <div class="wrapper">
                    <h3 class="align-center">From our Blog</h3>
                    <div class="spacer-big"></div>
                    <div class="isotope-grid style-column-3 isotope-spaced-big" id="blog-grid">
                        {% for post in latest %}
                            <div class="blog-item isotope-item">
                                <div class="blog-item-inner item-inner">
                                    <div class="blog-media do-anim-modern">
                                        <a class="thumb-hover scale" href="{{ post.link }}">
                                            <img alt="Blog post image" class="lazy" data-src="{{ post.thumbnail.src }}" height="900" width="1200">
                                        </a>
                                    </div>
                                    <div class="blog-info">
                                        <div class="post-meta clearfix">
                                            <span class="post-date">{{ post.date }}</span>
                                            <span class="post-cat">
                                                <a href="{{ post.link }}">{{ post.terms('category') | join(', ') }}</a>
                                            </span>
                                        </div>
                                        <h3 class="post-name">
                                            <a href="{{ post.link }}">{{ post.title|length > 35 ? post.title|slice(0, 35)|raw ~ '...' : post.title|raw }}</a>
                                        </h3>
                                        <p>{{ post.preview|length > 200 ? post.preview|slice(0, 200)|raw ~ '...' : post.preview|raw }}</p>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="spacer-big"></div>
                    <div class="spacer-big hidden-768"></div>

                    <div class="fullwidth-section text-light" style="background: #000000;">
                        <div class="fullwidth-content wrapper-small align-center">
                            <h3 class="title-alt">Ready to start your Project?
