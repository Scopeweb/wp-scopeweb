            <section id="page-body">
                <div class="spacer-big hidden-768"></div>
                <div class="spacer-big hidden-768"></div>
                <div class="wrapper-small hidden-768">
                    <h2>{{post.get_field('home_main_title')}}</h2>
                </div>
                <div class="spacer-big hidden-768"></div>
                <div class="spacer-big hidden-768"></div>
                <div class="wrapper">
                    <div class="column-section clearfix">
                        <div class="column one-third hidden-768">
                            <h3>{{post.get_field('home_about_column_1_title')}}</h3>
                            <h5 class="mt-50">{{post.get_field('home_about_column_1_text')}}</h5>
                        </div>
                        <div class="column one-third hidden-768">
                            <h3>{{post.get_field('home_about_column_2_title')}}</h3>
                            <h5 class="mt-50">{{post.get_field('home_about_column_2_text')}}</h5>
                        </div>
                        <div class="column one-third last-col">
                            <h3>{{post.get_field('home_about_column_3_title')}}</h3>
                            <h5 class="mt-50">{{post.get_field('home_about_column_3_text')}}</h5>
                        </div>
                    </div>
                </div>
                <div class="spacer-big"></div>
                <div class="form-row align-center">
                    <div class="btn" value="View all services"/>
