                    </div>
                </div>
                <div class="spacer-big"></div>
                <div class="spacer-big hidden-768"></div>
                <div class="isotope-grid portfolio-container style-column-2 clearfix text-light" id="portfolio-grid">
                    <div class="isotope-item portfolio-item double-width">
                        <div class="portfolio-item-inner item-inner">
                            <a class="thumb-hover scale text-light" href="{{ post.get_field('home_portfolio_1_url')}}"><img alt="Ultrabse product development" class="lazy" data-src="{{TimberImage(post.get_field('home_portfolio_image_1')).src}}" height="800" width="1920">
                                <div class="overlay-caption bottom align-left">
                                    <span class="caption-sub portfolio-category">{{ post.get_field('home_portfolio_1_category')}}</span>
                                    <h2 class="caption-name portfolio-name">{{ post.get_field('home_portfolio_1_name')}}</h2>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="isotope-item portfolio-item">
                        <div class="portfolio-item-inner item-inner">
                            <a class="thumb-hover scale text-light" href="{{ post.get_field('home_portfolio_2_url')}}"><img alt="GoRemote product concept" class="lazy" data-src="{{TimberImage(post.get_field('home_portfolio_image_2')).src}}" height="800" width="960">
                                <div class="overlay-caption bottom align-left">
                                    <span class="caption-sub portfolio-category">{{ post.get_field('home_portfolio_2_category')}}</span>
                                    <h2 class="caption-name portfolio-name">{{ post.get_field('home_portfolio_2_name')}}</h2>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="isotope-item portfolio-item">
                        <div class="portfolio-item-inner item-inner">
                            <a class="thumb-hover text-light videobg-section" data-phatmp4="{{ site.theme.path }}/assets/uploads/agency.mp4">
                                <img alt="Scope Web video" class="lazy" data-src="{{ site.theme.path }}/assets/uploads/portfolio-thumb-agency.jpg" height="680" width="960">
                                <div class="overlay-caption bottom align-left">
                                    <span class="caption-sub portfolio-category">About Our Agency</span>
                                    <h2 class="caption-name portfolio-name">Get to know Scope Web</h2>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="isotope-item portfolio-item">
                        <div class="portfolio-item-inner item-inner">
                            <a class="thumb-hover scale text-light" href="{{ post.get_field('home_portfolio_3_url')}}"><img alt="Gemini Gas Springs" class="lazy" data-src="{{TimberImage(post.get_field('home_portfolio_image_3')).src}}" height="800" width="960">
