<body class="{{body_class}}" data-template="base.twig">
{# <a class="skip-link screen-reader-text" href="#page-content">{{ _e( 'Skip to content') }}</a #}
<div class="text-light show-logo" id="page-loader">
    <span class="loader-icon bullets-jump">
        <span></span>
        <span></span>
        <span></span>
    </span>
</div>
<div id="page-content">
    <header class="header-left" id="header">
        {% block header %}
            <div class="header-inner clearfix">
                {% if post.slug == 'case-studies' | function('get_post_type', post.ID) == false %}
                    <div class="logo-left text-dark" id="logo">
                        <a href="{{ site.link }}">
                            <img alt="Logo Dark" id="dark-logo" src="{{ site.theme.path }}/assets/uploads/logo-scopeweb-dark.png">
                            <img alt="Logo Light" id="light-logo" src="{{ site.theme.path }}/assets/uploads/logo-scopeweb-light.png">
                        </a>
                    </div>
                {% else %}
                    <div class="logo-left text-light" id="logo">
                        <a href="{{ site.link }}"><img alt="Logo Dark" id="dark-logo" src="{{ site.theme.path }}/assets/uploads/logo-scopeweb-dark.png">
                            <img alt="Logo Light" id="light-logo" src="{{ site.theme.path }}/assets/uploads/logo-scopeweb-light.png">
                        </a>
                    </div>
                {% endif %}
                <div class="clearfix" id="menu">
                    <div class="menu-actions">
                        <div class="menu-toggle">
                            <span class="hamburger"></span>
                        </div>
                    </div>
                    <div id="menu-inner">
                        <nav id="main-nav">
                            {% include "menu.twig" with {
                                'menu' : menu.get_items
                            } %}
                        </nav>
                        <a href="https://clients.scopeweb.nyc" target="_blank">
                            <button class="submit portal">Client Login</button>
                        </a>
                    </div>
                </div>
                <div id="header-actions">
                    <div class="header-search">
                        <a class="search-open action-search open-action" data-action="search-overlay" href="#">
                            {# <svg class="search" viewbox="0 0 43.9 43.9" xmlns="http://www.w3.org/2000/svg">
                                <path d="M43.1,39.6L29.9,26.4c2-2.7,3.2-6.1,3.2-9.8C33.2,7.4,25.7,0,16.6,0S0,7.4,0,16.6c0,9.2,7.4,16.6,16.6,16.6 c3.7,0,7.1-1.2,9.8-3.2l13.2,13.2c1,1,2.6,1,3.5,0C44.1,42.2,44.1,40.6,43.1,39.6z M4.7,16.6C4.7,10,10,4.7,16.6,4.7 S28.5,10,28.5,16.6c0,6.6-5.3,11.9-11.9,11.9S4.7,23.1,4.7,16.6z"></path>
                            </svg> #}
                        </a>
                    </div>
                    <div class="header-totop">
                        <a class="totop" href="#">
                            <svg class="arrow arrow-top" viewbox="0 0 60 35.35" xmlns="http://www.w3.org/2000/svg">
                                <path d="M0,16.88a3,3,0,0,0,.16.94,1.51,1.51,0,0,0,.63.78l15,15a2.14,2.14,0,0,0,3.52.08,2.14,2.14,0,0,0-.08-3.52L8.59,19.38H57.5a2.5,2.5,0,1,0,0-5H8.59L19.22,3.59A2.14,2.14,0,0,0,19.3.08a2.14,2.14,0,0,0-3.52.08l-15,15a1.51,1.51,0,0,0-.62.78A3,3,0,0,0,0,16.88Z"></path>
                            </svg>
                        </a>
