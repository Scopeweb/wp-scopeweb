{% extends "base.twig" %}

{% block content %}
    <style>
    @media only screen and (min-width:655px){
        input[type=text],[type=email]{
            width: 45% !important;
        }
    }
    @media only screen and (max-width:654px){
        input[type=text],[type=email] {
            width: 100% !important;
        }
    }
    </style>
    <!-- HERO & BODY -->
    <div id="hero-and-body">

        <!-- HERO -->
        <section id="hero" class="hero-auto">

            <div id="page-title" class="wrapper align-center">
                <span class="post-cat">
                    <a href="{{ post.link }}">{{ post.terms('category') | join(', ') }}</a>
                </span>
                <div class="spacer-small"></div>
                <div class="post-name">
                    <h1>{{ post.title }}</h1>
                </div>
                <div class="post-meta">
                    <span class="post-date">{{ post.date }}</span>
                </div>
                <br>
                <div class="post-meta">
                    <span class="post-author">Author:
                        {{ post.author }}</span>
                </div>
            </div>
            <!-- END #page-title -->

        </section>
        <!-- HERO -->

        <!-- PAGEBODY -->
        <section id="page-body">

            <div id="blog-single">
                <div class="blog-media">
                    <img src="{{ post.thumbnail.src|resize(900, 600) }}" alt="blog post header">
                </div>

                <div class="blog-content wrapper-small">
                    {{post.content}}
                    <div class="spacer-small"></div>
                    <!-- Go to www.addthis.com/dashboard to customize your tools --> <div class="addthis_inline_share_toolbox"></div>
                </div>

                <div class="wrapper-small">
                    <div class="spacer-big"></div>

                    <div class="column-section clearfix">
                        <div class="column one-full">
                            <!-- Begin Mailchimp Signup Form -->
                            <div id="mailchimp">
                                <form action="https://nyc.us19.list-manage.com/subscribe/post?u=5b30200a7171ca08bf6501ce7&amp;id=a528350254" class="validate" id="mc-embedded-subscribe-form" method="post" name="mc-embedded-subscribe-form" novalidate="" target="_blank">
                                    <div id="mc_embed_signup_scroll">
                                        <h2 style="color:#ff5f5f !important;font-weight:700;">ðŸ‘Š Sharing is caring</h2>
                                        <h5 class="title-alt" style="margin-bottom: 10px;">Once a month, the best tips to grow your online business.</h5>
                                        <input type="text" size="30" value="Enter your name" name="FNAME" class="required email" id="mce-FNAME" onfocus="if(this.value==this.defaultValue)this.value='';" onblur="if(this.value=='')this.value=this.defaultValue;">
                                        <input class="required email" id="mce-EMAIL" name="EMAIL" onblur="if(this.value=='')this.value=this.defaultValue;" onfocus="if(this.value==this.defaultValue)this.value='';" size="30" type="email" value="Enter your email">
                                        <div class="clear" id="mce-responses">
                                            <div class="response" id="mce-error-response" style="display:none"></div>
                                            <div class="response" id="mce-success-response" style="display:none"></div>
                                        </div>
                                        <div class="clear">
                                            <input class="button" id="mc-embedded-subscribe" name="subscribe" style="margin-top: 15px;" type="submit" value="Make me smart">
                                        </div>
                                    </div>
                                </form>
                            </div><!--End mc_embed_signup-->
                        </div>
                    </div>

                    <div class="spacer-big"></div>
                    <div class="spacer-big"></div>
                </div>
                <!-- END .wrapper-small -->
            </div>
            <div class="spacer-small"></div>

        </section>
        <!-- PAGEBODY -->

    </div>
    <!-- HERO & BODY -->
    <!-- Go to www.addthis.com/dashboard to customize your tools --> <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-5bad2d7d8419ba47"></script>
{% endblock %}
